@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<style>

    .refferal:hover {
        cursor: pointer;
    }

    .referral-code-input {
        display: none; /* Hide referral code input by default */
    }
    </style>
<h2 class="text-center">@ViewData["Title"]</h2>

<div class="">
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <h4>Create a new account.</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.Name"></label>
                    <input asp-for="Input.Name" class="form-control" placeholder="" />
                    <span asp-validation-for="Input.Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="form-control" placeholder="" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.ConfirmPassword"></label>
                    <input asp-for="Input.ConfirmPassword" class="form-control" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <!-- Referral Code Input Field -->
                <div class="form-group referral-code-input">
                    <label>Referral Code</label>
                    <input name="refferalCode" type="text" class="form-control" />

                </div>

                <button type="submit" class="btn btn-default">Register</button>
                <div style="margin-bottom:30px;margin-top:20px">
                    <a id="addReferralLink" class="text-muted refferal">Add Refferal Code</a>

                </div>
            </form>
        </div>

    </div>
</div>


@section Scripts {
    <script>
        // JavaScript to toggle visibility of referral code input and link
        document.addEventListener("DOMContentLoaded", function () {
            var addReferralLink = document.getElementById("addReferralLink");
            var referralCodeInput = document.querySelector(".referral-code-input");

            addReferralLink.addEventListener("click", function () {
                // Toggle visibility of referral code input and link
                referralCodeInput.style.display = "block";
                addReferralLink.style.display = "none";
            });
        });
    </script>
    <partial name="_ValidationScriptsPartial" />
}
