@model ProductViewModel
<style>
    .img-wrap {
        position: relative;
        display: inline-block;
        border: 1px black solid;
        font-size: 0;
    }

    


        .img-wrap .close {
            position: absolute;
            top: 2px;
            right: 2px;
            z-index: 100;
            background-color: #FFF;
            padding: 5px 2px 2px;
            color: #000;
            font-weight: bold;
            cursor: pointer;
            opacity: .2;
            text-align: center;
            font-size: 22px;
            line-height: 10px;
            border-radius: 50%;
        }

        .img-wrap:hover .close {
            opacity: 1;
        }
</style>
<section id="main-content">
	<section class="wrapper">
	<div class="form-w3layouts">
        <!-- page start-->
        <!-- page start-->
        <div class="row">
            <div class="col-lg-12">
                    <section class="panel">
                        <header class="panel-heading">
                            @(Model.product.Id!=0?"Edit Product":"Create Product")
                        </header>
                        <div class="panel-body">
                            <div class="position-center">
                                <form role="form" asp-action="Upsert" method="post" enctype="multipart/form-data">
                                   <input asp-for="product.Id" hidden/>
                                   <input asp-for="product.productImages"hidden />

                                   
                                <div class="form-group">
                                        <label asp-for="product.ProductName">Product Name</label>
                                        <input asp-for="product.ProductName" class="form-control"  placeholder="Enter Product Name">
                                        <span asp-validation-for="product.ProductName" class="text-danger"></span>

                                </div>
                                    <div class="form-group">
                                        <label asp-for="product.ProductPrice">Product Price</label>
                                        <input asp-for="product.ProductPrice" class="form-control" placeholder="Enter Product Price">
                                        <span asp-validation-for="product.ProductPrice" class="text-danger"></span>

                                    </div>
                                    <div class="form-group">
                                        <label asp-for="product.Quantity">Product Quantity</label>
                                        <input asp-for="product.Quantity" type="number" class="form-control" placeholder="Enter Product Quantity">
                                        <span asp-validation-for="product.Quantity" class="text-danger"></span>

                                    </div>
                                    @{
                                        if (Model.product.Id != 0)
                                        {
                                            <div class="form-group">
                                                <label asp-for="product.StockLeft">Stock</label>
                                                <input asp-for="product.StockLeft" type="number" class="form-control" placeholder="Enter Stock Left">
                                                <span asp-validation-for="product.StockLeft" class="text-danger"></span>

                                            </div>
                                        }
                                    }
                                    <div class="form-group">
                                        <label asp-for="product.ProductDescription">Product Description</label>
                                        <textarea asp-for="product.ProductDescription" class="form-control" rows="4" cols="50"></textarea>
                                        <span asp-validation-for="product.ProductDescription" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="product.CategoryId">Category</label>
                                        <select asp-for="@Model.product.CategoryId" asp-items="@Model.CategoryList" class="form-control border-0 shadow">
                                            <option selected disabled>--Select Category--</option>
                                            


                                        </select>
                                    </div>
                                    <div class="d-flex flex-wrap">
                                        
                                       
                                    </div>
                                     
                                           
                                     
                                   

                                    <div class="form-group">
                                        <label asp-for="product.ColorsId">Color</label>
                                        <select asp-for="@Model.product.ColorsId" asp-items="@Model.Colors" class="form-control border-0 shadow" style="margin-top:0px">
                                            <option selected disabled>--Select Color--</option>



                                        </select>
                                    </div>
                                    
                                    @{
                                        if (@Model.product.Id != 0)
                                        {
                                           
                                            <div class="d-flex flex-wrap">
                                                @foreach (var img in @Model.product.productImages)
                                                {
                                                  
                                                    <div class="img-wrap">
                                                     <a asp-action="DeleteImage" asp-route-id="@img.Id">   <span class="close">&times;</span></a>
                                                        <img src="@img.ImageUrl" width="100" height="100" data-id="103">
                                                    </div>
                                                }
                                            </div>


                                        }
                                    }
                                    <div class="form-group">
                                        <label>Image</label>
                                        <input type="file" name="files" multiple/>
                                    </div>
                                   
                                 
                                   
                                    <div class="form-check mt-3">
                                        <input asp-for="@Model.product.isFeatured" class="form-check-input" type="checkbox" />
                                        <label asp-for="@Model.product.isFeatured" class="form-check-label">
                                            Featured Product
                                        </label>
                                    </div>

                                    @if (Model.product.Id != 0)
                                    {
                                        <div class="text-center">
                                            <button type="submit" class="btn btn-info mr-2">Update</button>
                                            <a class="btn btn-primary" asp-action="Product">Back to List</a>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="text-center">
                                            <button type="submit" class="btn btn-info mr-2">Create</button>
                                            <a class="btn btn-primary" asp-action="Product">Back to List</a>
                                        </div>
                                    }


                            </form>

                            </div>

                        </div>
                    </section>

            </div>
        
        </div>
       


        <!-- page end-->
        </div>
</section>
 <!-- footer -->
		  <div class="footer">
			<div class="wthree-copyright">
			  <p>© 2017 Visitors. All rights reserved | Design by <a href="http://w3layouts.com">W3layouts</a></p>
			</div>
		  </div>
  <!-- / footer -->
</section>
