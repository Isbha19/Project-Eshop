



@model Category


<section id="main-content">
    <section class="wrapper">
        <div class="form-w3layouts">
            <!-- page start-->
            <!-- page start-->
            <div class="row">
                <div class="col-lg-12">
                    <section class="panel">
                        <header class="panel-heading">
                            Are you sure you want to delete?
                        </header>
                        <div class="panel-body">
                            <div class="position-center">



                                <hr />
                                <dl class="dl-horizontal">
                                    <dt class="text-muted">
                                        @Html.DisplayNameFor(model => model.CategoryName)
                                    </dt>
                                    <dd>
                                        @Html.DisplayFor(model => model.CategoryName)
                                    </dd>
                                    <dt class="text-muted">
                                        @Html.DisplayNameFor(model => model.CategoryDescription)
                                    </dt>
                                    <dd>
                                        @Html.DisplayFor(model => model.CategoryDescription)
                                    </dd>
                                </dl>
                                <form asp-action="Delete" method="post" asp-route-id="@Model.Id">
                                    <input type="hidden" asp-for="Id" />
                                    <div class="text-center">
                                        <input type="submit" value="Delete" class="btn btn-danger" />
                                        <a class="btn btn-primary" asp-area="Admin" asp-controller="Category" asp-action="Category">Back to List</a>

                                    </div>

                              
                                </form>
                            </div>

                        </div>
                    </section>

                </div>

            </div>



            <!-- page end-->
        </div>
    </section>
    <!-- footer -->
    <div class="footer">
        <div class="wthree-copyright">
