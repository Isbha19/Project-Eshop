@model Offer

<section id="main-content">
	<section class="wrapper">
	<div class="form-w3layouts">
        <!-- page start-->
        <!-- page start-->
        <div class="row">
            <div class="col-lg-12">
                    <section class="panel">
                        <header class="panel-heading">
                            @(Model.OfferId!=0?"Edit Offers":"Create Offer")
                        </header>
                        <div class="panel-body">
                            <div class="position-center">
                                <form role="form" asp-action="Upsert" method="post" enctype="multipart/form-data">
                                   <input asp-for="OfferId" hidden/>
                                 <span asp-validation-summary="All"></span>
                                <div class="form-group">
                                        <label asp-for="OfferName">Offer Name</label>
                                        <input asp-for="OfferName" class="form-control" id="exampleInputEmail1" placeholder="Enter Colors Name">
                                        <span asp-validation-for="OfferName" class="text-danger"></span>

                                </div>
                                    <div class="form-group">
                                        <label asp-for="offerType">Offer Type</label>
                                        <select asp-for="offerType" asp-items="@ViewBag.OfferTypes" class="form-control">
                                            <option value="">-- Select Offer Type --</option>
                                        </select>
                                        <span asp-validation-for="offerType" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Discount">Discount</label>
                                        <input asp-for="Discount" class="form-control" id="exampleInputEmail1" placeholder="Enter Colors Name">
                                        <span asp-validation-for="Discount" class="text-danger"></span>

                                    </div>
                                    <div class="form-group">
                                        <label asp-for="StartDate">Start Date</label>
                                        <input type="date" asp-for="StartDate" class="form-control" id="exampleInputEmail1" min="@DateTime.Now.ToString("yyyy-MM-dd")">
                                        <span asp-validation-for="StartDate" class="text-danger"></span>

                                    </div>
                                    <div class="form-group">
                                        <label asp-for="EndDate">End Date</label>
                                        <input type="date" asp-for="EndDate" class="form-control" id="exampleInputEmail1" min="@DateTime.Now.ToString("yyyy-MM-dd")">
                                        <span asp-validation-for="EndDate" class="text-danger"></span>

                                    </div>

                                    

                                    @if (Model.OfferId != 0)
                                    {
                                        <div class="text-center">
                                            <button type="submit" class="btn btn-info mr-2">Update</button>
                                            <a class="btn btn-primary" asp-action="Offer">Back to List</a>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="text-center">
                                            <button type="submit" class="btn btn-info mr-2">Create</button>
                                            <a class="btn btn-primary" asp-action="Offer">Back to List</a>
                                        </div>

                                    }


                            </form>

                            </div>

                        </div>
                    </section>

            </div>
        
        </div>
       


        <!-- page end-->
        </div>
</section>
 <!-- footer -->
		  <div class="footer">
			<div class="wthree-copyright">
			  <p>© 2017 Visitors. All rights reserved | Design by <a href="http://w3layouts.com">W3layouts</a></p>
			</div>
		  </div>
  <!-- / footer -->
</section>