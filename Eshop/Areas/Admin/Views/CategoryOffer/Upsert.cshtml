@model CategoryOfferViewModel
<style>
    .img-wrap {
        position: relative;
        display: inline-block;
        border: 1px black solid;
        font-size: 0;
    }




        .img-wrap .close {
            position: absolute;
            top: 2px;
            right: 2px;
            z-index: 100;
            background-color: #FFF;
            padding: 5px 2px 2px;
            color: #000;
            font-weight: bold;
            cursor: pointer;
            opacity: .2;
            text-align: center;
            font-size: 22px;
            line-height: 10px;
            border-radius: 50%;
        }

        .img-wrap:hover .close {
            opacity: 1;
        }
</style>
<section id="main-content">
    <section class="wrapper">
        <div class="form-w3layouts">
            <!-- page start-->
            <!-- page start-->
            <div class="row">
                <div class="col-lg-12">
                    <section class="panel">
                        <header class="panel-heading">
                            @(Model.categoryOffer.Id != 0 ? "Edit Category Offer" : "Create Category Offer")
                        </header>
                        <div class="panel-body">
                            <div class="position-center">
                                <form role="form" asp-action="Upsert" method="post" enctype="multipart/form-data">
                                    <input asp-for="categoryOffer.Id" hidden />


                                    <div class="form-group">
                                        <label asp-for="@Model.categoryOffer.CategoryId">Category</label>
                                        <select asp-for="@Model.categoryOffer.CategoryId" asp-items="@Model.categoryList" class="form-control border-0 shadow">
                                            <option selected disabled>--Select Category--</option>


                                        </select>
                                    </div>
                                    <div class="d-flex flex-wrap">
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="@Model.categoryOffer.OfferId">Offer</label>
                                        <select asp-for="@Model.categoryOffer.OfferId" asp-items="@Model.offerList" class="form-control border-0 shadow">
                                            <option selected disabled>--Select Offer--</option>


                                        </select>
                                    </div>
                                   
                                    @if (@Model.categoryOffer.Id != 0)
                                    {
                                        <div class="text-center">
                                            <button type="submit" class="btn btn-info mr-2">Update</button>
                                            <a class="btn btn-primary" asp-action="ProductOffer">Back to List</a>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="text-center">
                                            <button type="submit" class="btn btn-info mr-2">Create</button>
                                            <a class="btn btn-primary" asp-action="ProductOffer">Back to List</a>
                                        </div>
                                    }


                                </form>

                            </div>

                        </div>
                    </section>

                </div>

            </div>



            <!-- page end-->
        </div>
    </section>
    <!-- footer -->
    <div class="footer">
        <div class="wthree-copyright">
            <p>© 2017 Visitors. All rights reserved | Design by <a href="http://w3layouts.com">W3layouts</a></p>
        </div>
    </div>
    <!-- / footer -->
</section>
