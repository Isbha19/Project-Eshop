@model Coupon

<section id="main-content">
	<section class="wrapper">
	<div class="form-w3layouts">
        <!-- page start-->
        <!-- page start-->
        <div class="row">
            <div class="col-lg-12">
                    <section class="panel">
                        <header class="panel-heading">
                            @(Model.Id!=0?"Edit Coupon":"Create Coupon")
                        </header>
                        <div class="panel-body">
                            <div class="position-center">
                                <form role="form" asp-action="Upsert" method="post" enctype="multipart/form-data">
                                   <input asp-for="Id" hidden/>
                                 
                                <div class="form-group">
                                        <label asp-for="Code">Coupon Code</label>
                                        <input asp-for="Code" class="form-control" placeholder="Enter Coupon Code">
                                        <span asp-validation-for="Code" class="text-danger"></span>

                                </div>
                                    <div class="form-group">
                                        <label asp-for="Percentage">Discount Percentage</label>
                                        <input asp-for="Percentage" class="form-control" placeholder="Enter Discount Percentage">
                                        <span asp-validation-for="Percentage" class="text-danger"></span>

                                    </div>
                                    <div class="form-group">
                                        <label asp-for="ExpireDate">Expiry Date</label>
                                        <input type="date" asp-for="ExpireDate" class="form-control" placeholder="Enter Expiry Date" min="@DateTime.Now.ToString("yyyy-MM-dd")">
                                        <span asp-validation-for="ExpireDate" class="text-danger"></span>

                                    </div>
                                    <div class="form-check mt-3">
                                        <input asp-for="isReferral" class="form-check-input" type="checkbox" />
                                        <label asp-for="isReferral" class="form-check-label">
                                            Referral Code
                                        </label>
                                    </div>

                                    @if (Model.Id != 0)
                                    {
                                        <div class="text-center">
                                            <button type="submit" class="btn btn-info mr-2">Update</button>
                                            <a class="btn btn-primary" asp-action="Coupon">Back to List</a>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="text-center">
                                            <button type="submit" class="btn btn-info mr-2">Create</button>
                                            <a class="btn btn-primary" asp-action="Coupon">Back to List</a>
                                        </div>

                                    }


                            </form>

                            </div>

                        </div>
                    </section>

            </div>
        
        </div>
       


        <!-- page end-->
        </div>
</section>
 <!-- footer -->
		  <div class="footer">
			<div class="wthree-copyright">
