@model Colors

<section id="main-content">
	<section class="wrapper">
	<div class="form-w3layouts">
        <!-- page start-->
        <!-- page start-->
        <div class="row">
            <div class="col-lg-12">
                    <section class="panel">
                        <header class="panel-heading">
                            @(Model.Id!=0?"Edit Colors":"Create Colors")
                        </header>
                        <div class="panel-body">
                            <div class="position-center">
                                <form role="form" asp-action="Upsert" method="post" enctype="multipart/form-data">
                                   <input asp-for="Id" hidden/>
                                 
                                <div class="form-group">
                                        <label asp-for="Color">Colors Name</label>
                                        <input asp-for="Color" class="form-control" id="exampleInputEmail1" placeholder="Enter Colors Name">
                                        <span asp-validation-for="Color" class="text-danger"></span>

                                </div>
                                    

                                    @if (Model.Id != 0)
                                    {
                                        <div class="text-center">
                                            <button type="submit" class="btn btn-info mr-2">Update</button>
                                            <a class="btn btn-primary" asp-action="Colors">Back to List</a>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="text-center">
                                            <button type="submit" class="btn btn-info mr-2">Create</button>
                                            <a class="btn btn-primary" asp-action="Colors">Back to List</a>
                                        </div>

                                    }


                            </form>

                            </div>

                        </div>
                    </section>

            </div>
        
        </div>
       


        <!-- page end-->
        </div>
</section>
