@model UserViewModel
<style>
    .Details {
        max-width: 600px;
        margin: 20px auto;
        background-color: #fff;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    h2 {
        color: #333;
        text-align: center;
        margin-bottom: 20px;
    }

    .user-details {
        margin-bottom: 20px;
    }

        .user-details label {
            font-weight: bold;
        }

    .edit-btn {
        display: block;
        width: 100%;
        padding: 10px;
        background-color: #007bff;
        color: #fff;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        text-align: center;
        text-decoration: none;
    }

        .edit-btn:hover {
            background-color: #0056b3;
        }

    .form-group {
        margin-bottom: 20px;
    }

        .form-group label {
            display: block;
            font-weight: bold;
        }

        .form-group input {
            width: 100%;
            padding: 8px;
            border: 1px solid #ccc;
            border-radius: 5px;
            box-sizing: border-box;
        }
</style>

<div class="Details">
    <h2>Edit Profile Details</h2>
    <form method="post" asp-area="User" asp-controller="User" asp-action="EditProfile">
        <input asp-for="@Model.appUser.Id" hidden/>
        <div class="form-group">
            <label asp-for="@Model.appUser.Name">Name:</label>
            <input asp-for="@Model.appUser.Name"  required>
            <span asp-validation-for="@Model.appUser.Name" class="text-danger"></span>

        </div>
        <div class="form-group">
            <label asp-for="@Model.appUser.Email">Email:</label>
            <input asp-for="@Model.appUser.Email"   required>
            <span asp-validation-for="@Model.appUser.Email" class="text-danger"></span>

        </div>
        <div class="form-group">
            <label asp-for="@Model.appUser.Gender">Gender:</label>
            <select asp-for="@Model.appUser.Gender" asp-items="@Model.GenderList" class="form-control" required>
                <option disabled selected>--Select Gender--</option>
            </select>
            <span asp-validation-for="@Model.appUser.Gender" class="text-danger"></span>

        </div>
        <div class="form-group">
            <label asp-for="@Model.appUser.DateOfBirth">Date of Birth:</label>
            <input type="date" asp-for="@Model.appUser.DateOfBirth" required>
            <span asp-validation-for="@Model.appUser.DateOfBirth" class="text-danger"></span>

        </div>
        <div class="form-group">
            <label asp-for="@Model.appUser.PhoneNumber">Mobile Number:</label>
            <input asp-for="@Model.appUser.PhoneNumber" type="tel" required>
            <span asp-validation-for="@Model.appUser.PhoneNumber" class="text-danger"></span>

        </div>
        <div class="form-group">
            <label asp-for="@Model.appUser.AlternatePhoneNum">Alternate Mobile Number:</label>
            <input asp-for="@Model.appUser.AlternatePhoneNum" type="tel" >
            <span asp-validation-for="@Model.appUser.AlternatePhoneNum" class="text-danger"></span>

        </div>
        <div class="form-group">
            <label asp-for="@Model.appUser.Location">Location:</label>
            <input asp-for="@Model.appUser.Location" >
            <span asp-validation-for="@Model.appUser.Location" class="text-danger"></span>

        </div>
        <button type="submit" class="edit-btn">Save Changes</button>
    </form>
</div>
