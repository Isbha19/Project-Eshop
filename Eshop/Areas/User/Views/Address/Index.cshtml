@model IEnumerable<ShippingAdress>


			<div class="contact">
				<div class="container">
					<div class="dreamcrub">
						<ul class="breadcrumbs">
							<li class="home">
								<a href="index.html" title="Go to Home Page">Home</a>&nbsp;
								<span>&gt;</span>
							</li>
							<li class="women">
								Address
							</li>
						</ul>
						<ul class="previous">
							<li><a href="index.html">Back to Previous Page</a></li>
						</ul>
						<div class="clearfix"></div>
					</div>

					<div class="contact-form">
						<div class="contact-info">
							<h3>Saved Addresses</h3>
						</div>



			@{
				if (Model.Any())
				{

					foreach (var item in Model)
					{
						if (item.IsDefault == true)
						{
							<div class="container mt-4">
								<div class="address-container">
									@if (item.IsDefault == true)
									{
										<p style="font-weight: bold; color: #333; margin-bottom: 10px;">DEFAULT ADDRESS</p>
									}
									<div class="address">


										<p><strong>Name:</strong> @item.Name</p>
										<p><strong>Phone:</strong> @item.Phone</p>

										<p><strong>Address:</strong> @item.Address</p>
										<p><strong>City:</strong> @item.City</p>
										<p><strong>Pincode:</strong> @item.PinCode</p>

										<p><strong>District:</strong> @item.District</p>

										<p><strong>State:</strong> @item.State</p>
										<span class="badge badge-secondary">@item.saveAddress</span>





										<!-- Add other address details as needed -->
										<hr />
										<div class="action-buttons">
											<a asp-area="User" asp-action="Edit" asp-route-Id="@item.Id" class="btn btn-sm btn-primary">Edit</a>
											<button class="btn btn-danger" data-toggle="modal" data-target="#deleteConfirmationModal_@item.Id">
												Delete
											</button>
										</div>
									</div>





									<!-- Button for adding a new address -->

								</div>
							</div>
							<div class="clearfix"></div>

							@if (Model.Count() > 1)
							{
								<hr />
								<p class="text-center" style="font-weight: bold; color: #333; margin-bottom: 10px;">OTHER ADDRESSES</p>
							}

				}
						else
						{
							<div class="container mt-4">
								<div class="address-container">

									<div class="address">


										<p><strong>Name:</strong> @item.Name</p>
										<p><strong>Phone:</strong> @item.Phone</p>

										<p><strong>Address:</strong> @item.Address</p>
										<p><strong>City:</strong> @item.City</p>
										<p><strong>Pincode:</strong> @item.PinCode</p>

										<p><strong>District:</strong> @item.District</p>

										<p><strong>State:</strong> @item.State</p>
										<span class="badge badge-secondary">@item.saveAddress</span>





										<!-- Add other address details as needed -->
										<hr />
										<div class="action-buttons">
											<a asp-area="User" asp-action="Edit" asp-route-Id="@item.Id" class="btn btn-sm btn-primary">Edit</a>
											<button class="btn btn-danger" data-toggle="modal" data-target="#deleteConfirmationModal_@item.Id">
												Delete
											</button>
										</div>
									</div>





									<!-- Button for adding a new address -->

								</div>
							</div>
							<div class="clearfix"></div>
						}

						
						<!-- Bootstrap modal for confirmation -->
						<div class="modal fade" id="deleteConfirmationModal_@item.Id" tabindex="-1" role="dialog" aria-labelledby="deleteConfirmationModalLabel" aria-hidden="true">
							<div class="modal-dialog" role="document">
								<div class="modal-content">
									<div class="modal-header">
										<h5 class="modal-title" id="deleteConfirmationModalLabel">Confirm Delete</h5>
										<button type="button" class="close" data-dismiss="modal" aria-label="Close">
											<span aria-hidden="true">&times;</span>
										</button>
									</div>
									<div class="modal-body">
										Are you sure you want to delete this item?
									</div>
									<div class="modal-footer">
										<button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
										<a href="@Url.Action("Delete", "Address",new { id = @item.Id })" class="btn btn-danger">Delete</a>
									</div>
								</div>
							</div>
						</div>

		}

	}
	else
	{
		<div class="text-center mt-5">
			<h1 class="text-danger">No Address Found!</h1>
			<p class="lead">It seems you haven't added any addresses yet.</p>

		</div>

	}

}
<div class="text-center">
				<a asp-area="User" asp-action="Create" class="btn btn-success add-button mb-5">Add New Address</a>
			</div>
		</div>
	</div>
</div>
